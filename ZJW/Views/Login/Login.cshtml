    <script type="text/javascript">
        var obj = $("#main");//获得相应的Div对象
        var x = ($(window).width() - 500) / 2;//使用$(window).width()获得显示器的宽，并算出对应的Div离左边的距离
        var y = ($(window).height() - 500) / 2;//使用$(window).height()获得显示器的高，并算出相应的Div离上边的距离
        obj.css("top", y).css("left", x);
        //异步实现用户的登录
        function LoginUserInfo() {
            //alert("运行到这里");
            //验证用户必须输入必填项
            /*var validate = $("#LoginForm").form("validate");

            if (validate == false) {
                return false;
            }
            $("#submit").linkbutton("disable");*/
            //ajax提交

            $("#submitBtn").attr('disabled', "true");
            $.ajax({
                url: "/Login/CheckUserLogin",
                type: "POST",
                dataType: "json",
                data: { "UserName": $("#inputUserName").val(), "Password": $("#inputPassword").val() },
                success: function (data) {
                    if (data.result == "success") {
                        //window.location.href = "Home/GetView?viewPara=Index";
                        //window.location.href = "@Url.Content("/Home/Index/")";
                        window.location.href = "/Home/Index";
                    }
                    else {
                        alert(data.content);
                        window.location.href = "/Login/Login";
                    }
                },
                error: function (xhr, error, ex) {
                    alert("出现错误，请稍后再试，带来不便，敬请谅解");
                    window.location.href = "/Login/Login";
                }
            });
        }
        function Clear() {
            $('#inputUserName').val('') ;
            $('#inputPassword').val('') ;
        }
    </script>
