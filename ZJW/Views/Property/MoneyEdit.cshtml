@using Model;
@{

    Layout = null;
    Money item = ViewBag.Money;
}

<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title></title>
    @RenderPage("~/Views/Shared/Include.cshtml")


</head>
<body>
    <div class="easyui-panel" style="padding: 20px 20px;">
        @RenderPage("~/Views/Shared/upload.cshtml")
        @{Html.BeginForm(Session["Flag"] == "Create" ? "MoneyCreate" : "MoneyEdit", "Property", FormMethod.Post, new { name = "frm_edit", id = "frm_edit" });}
        <table class="detail_table" border="0" cellspacing="1" cellpadding="0" align="center" width="100%">
            <tr class="detail_tr">
                <td class="table_title" colspan="8">
                    涉案款项信息表<br />
                    @Html.HiddenFor(i => item.ID)
                      
                </td>
            </tr>
            <tr class="detail_tr">
                <td class="detail_td1" colspan="1">案件名称：</td>
                <td class="detail_td2" colspan="3">@{if(Session["Flag"] == "Detail"){ @item.CaseName}else{@Html.TextBoxFor(i => item.CaseName, new { size = 60 })}}</td>
                <td class="detail_td1" colspan="1">案件代号：</td>
                <td class="detail_td2" colspan="3">@{if (Session["Flag"] == "Detail"){ @item.CaseCode}else{@Html.TextBoxFor(i => item.CaseCode, new { size = 60 })}}</td>
            </tr>

            <tr class="detail_tr">
                <td class="detail_td1" colspan="8"></td>
            </tr>

            <tr class="detail_tr">
                <td class="detail_td1" colspan="1">款项编号：</td>
                <td class="detail_td2" colspan="7">@{if(Session["Flag"] == "Detail"){ @item.MoneyCode}else{@Html.TextBoxFor(i => item.MoneyCode, new { size = 60 })}}</td>
            </tr>
	    <tr class="detail_tr">
                <td class="detail_td1" colspan="1">原持有人：</td>
                <td class="detail_td2" colspan="7">@{if(Session["Flag"] == "Detail"){ @item.OriginalHolder}else{@Html.TextBoxFor(i => item.OriginalHolder, new { size = 60 })}}</td>
            </tr>
            <tr class="detail_tr">
                <td class="detail_td1" colspan="1">款项种类：</td>
                <td class="detail_td2" colspan="7">@{if (Session["Flag"] == "Detail"){ @item.MoneyType}else{@Html.TextBoxFor(i => item.MoneyType, new { size = 60 })}}</td>
            </tr>
	    <tr class="detail_tr">
                <td class="detail_td1" colspan="1">币    种：</td>
                <td class="detail_td2" colspan="3">@{if(Session["Flag"] == "Detail"){ @item.Currency}else{@Html.TextBoxFor(i => item.Currency, new { size = 60 })}}</td>
                <td class="detail_td1" colspan="1">金    额：</td>
                <td class="detail_td2" colspan="3">@{if (Session["Flag"] == "Detail"){ @item.Sum}else{@Html.TextBoxFor(i => item.Sum, new { size = 60 })}}</td>
            </tr>
	    <tr class="detail_tr">
                <td class="detail_td1" colspan="1">原 账 号：</td>
                <td class="detail_td2" colspan="3">@{if(Session["Flag"] == "Detail"){ @item.OriginAccount}else{@Html.TextBoxFor(i => item.OriginAccount, new { size = 60 })}}</td>
                <td class="detail_td1" colspan="1">保管账号：</td>
                <td class="detail_td2" colspan="3">@{if (Session["Flag"] == "Detail"){ @item.KeepAccount}else{@Html.TextBoxFor(i => item.KeepAccount, new { size = 60 })}}</td>
            </tr>
            <tr class="detail_tr">
                <td class="detail_td1" colspan="1">款项说明：</td>
                <td class="detail_td2" colspan="7">@{if(Session["Flag"] == "Detail"){ @item.Content}else{@Html.TextAreaFor(i => item.Content, new { cols = "100%", rows = "5" })}}</td>
            </tr>
	    <tr class="detail_tr">
                <td class="detail_td1" colspan="8"></td>
            </tr>
	    <tr class="detail_tr">
                <td class="detail_td1" colspan="1">暂扣时间：</td>
                <td class="detail_td2" colspan="3">@{if(Session["Flag"] == "Detail"){ @item.WithholdDate}else{@Html.TextBoxFor(i => item.WithholdDate, new Dictionary<string, object>() { { "size", "20" }, { "class", "easyui-datebox" }, { "data-options", "formatter:cnDateFormat,parser:cnDateParse" } })}}</td>
                <td class="detail_td1" colspan="1">承办人员：</td>
                <td class="detail_td2" colspan="3">@{if (Session["Flag"] == "Detail"){ @item.Undertaker}else{@Html.TextBoxFor(i => item.Undertaker, new { size = 60 })}}</td>
            </tr>
	    <tr class="detail_tr">
                <td class="detail_td1" colspan="1">移交时间：</td>
                <td class="detail_td2" colspan="3">@{if(Session["Flag"] == "Detail"){ @item.HandOverDate}else{@Html.TextBoxFor(i => item.HandOverDate, new Dictionary<string, object>() { { "size", "20" }, { "class", "easyui-datebox" }, { "data-options", "formatter:cnDateFormat,parser:cnDateParse" } })}}</td>
                <td class="detail_td1" colspan="1">接收人员：</td>
                <td class="detail_td2" colspan="3">@{if (Session["Flag"] == "Detail"){ @item.Receicer}else{@Html.TextBoxFor(i => item.Receicer, new { size = 60 })}}</td>
            </tr>
	    <tr class="detail_tr">
                <td class="detail_td1" colspan="8"></td>
            </tr>
	    <tr class="detail_tr">
                <td class="detail_td1" colspan="1">处置情况：</td>
                <td class="detail_td2" colspan="3">@{if(Session["Flag"] == "Detail"){ @item.HandleMethod}else{@Html.TextBoxFor(i => item.HandleMethod, new { size = 60 })}}</td>
                <td class="detail_td1" colspan="1">款项性质：</td>
                <td class="detail_td2" colspan="3">@{if (Session["Flag"] == "Detail"){ @item.MoneyProperty}else{@Html.TextBoxFor(i => item.MoneyProperty, new { size = 60 })}}</td>
            </tr>
	    <tr class="detail_tr">
                <td class="detail_td1" colspan="1">处置移交时间：</td>
                <td class="detail_td2" colspan="3">@{if(Session["Flag"] == "Detail"){ @item.HandleDate}else{@Html.TextBoxFor(i => item.HandleDate, new Dictionary<string, object>() { { "size", "20" }, { "class", "easyui-datebox" }, { "data-options", "formatter:cnDateFormat,parser:cnDateParse" } })}}</td>
                <td class="detail_td1" colspan="1">处置接收人：</td>
                <td class="detail_td2" colspan="3">@{if (Session["Flag"] == "Detail"){ @item.HandleReveiver}else{@Html.TextBoxFor(i => item.HandleReveiver, new { size = 60 })}}</td>
            </tr>
            <tr class="detail_tr">
                <td class="detail_td1" colspan="1">备注：</td>
                <td class="detail_td2" colspan="7">@{if(Session["Flag"] == "Detail"){ @item.Note}else{@Html.TextAreaFor(i => item.Note, new { cols = "100%", rows = "5" })}}</td>
            </tr>
	        <tr class="detail_tr">
                <td class="detail_td1" colspan="1">单据凭证：</td>
                <td class="detail_td2" colspan="7">@{if(Session["Flag"] == "Detail"){ @item.Affix}else{@Html.TextBoxFor(i => item.Affix, new { size = 135 })}}</td>
            </tr>

        </table>
        <p align="center">
            @if (Session["Flag"] == "Create")
            {
                <a href="javascript:void(0)" class="easyui-linkbutton" id="btnLogin" iconcls="icon-ok" onclick="SubmitData()">保存</a>
            }
            else if (Session["Flag"] == "Edit")
            {
                <a href="javascript:void(0)" class="easyui-linkbutton" id="btnLogin" iconcls="icon-ok" onclick="SubmitData()">修改</a>
            }
            <a href=“javascript:void(0);“ class="easyui-linkbutton" id="btnLogin" iconcls="icon-ok" onclick="history.back(-1); return false;">返回</a>
        </p>

        @{Html.EndForm();}
    </div>

</body>
</html>
<script type="text/javascript">
    function SubmitData() {
        if ($("#frm_edit").form('validate')) {
            $("#btnLogin").linkbutton("disable");
            $.messager.alert("操作提示", "操作成功！", "info", function (r) {
                setTimeout(function () { $('#frm_edit').submit() }, 0);
            });
        }
    }

</script>



  


